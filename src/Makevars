.PHONY: all mylibs

PKG_CPPFLAGS=-Iswipl-7.5.1/include -Iswipl-7.5.1/packages/cpp
PKG_LIBS=-L$(PWD)/../inst/swipl/lib/swipl-7.5.1/lib/`sh swipl-uname.sh` -lswipl

all: $(SHLIB)
$(SHLIB): mylibs

mylibs:
	cd swipl-7.5.1/src ; chmod +x mkversion.sh ; chmod +x configure ; chmod +x rel-ln ; sh ./configure --disable-mt --prefix=$(PWD)/../inst/swipl --disable-shared --enable-static CFLAGS=-fPIC ; make ; make install
